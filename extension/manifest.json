{
  "manifest_version": 3,
  "name": "ProPulse",
  "version": "1.0.0",
  "description": "AI-powered proposal generator for Upwork jobs",
  "permissions": ["storage", "clipboardWrite", "scripting", "tabs"],
  "host_permissions": [
    "https://*.upwork.com/*",
    "http://localhost:3000/*",
    "http://localhost:5173/*",
    "https://propulse-pied.vercel.app/*",
    "https://propulse-backend-2024-11624eb5aa5e.herokuapp.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "ProPulse"
  },
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.upwork.com/*"],
      "js": ["src/content/index.jsx"],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/index.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
